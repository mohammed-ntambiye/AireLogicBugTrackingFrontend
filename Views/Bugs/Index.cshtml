@model List<AireLogicBugTrackingFrontend.Models.BugsModel>

@{
    ViewData["Title"] = "View";
}

<article class="row">
    <h2>Aire Logic Bug Tracking system </h2>
    <div class="container">
        <div class="row">
            <div class="span5">
                <table class="table table-striped table-condensed">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Priority</th>
                            <th>Time Raised</th>
                            <th>Status</th>
                            <th>Details</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            {
                                <tr>
                                    <td>@item.BugTitle</td>

                                    @if (item.Priority.ToLower() == "high")
                                    {
                                        <td><span class="danger"> @item.Priority</span></td>
                                    }
                                    else if (item.Priority.ToLower() == "medium")
                                    {
                                        <td><span class="badge badge-primary"> @item.Priority</span></td>
                                    }
                                    else
                                    {
                                        <td><span class="badge badge-success"> @item.Priority</span></td>
                                    }
                                    <td> @item.TimeStamp</td>
                                    <td>@item.Status</td>

                                    <td> <button class="BugDetails" id="@item.BugId" onclick="document.getElementById('myModal').style.display='block'" class="w3-button w3-black">Details</button></td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
            <div id="BugInformation"></div>
        </div>
    </div>

</article>